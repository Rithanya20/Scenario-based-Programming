#include<bits/stdc++.h>
using namespace std;
int main(){
    int n,k;
    cin>>n>>k;
    int a[n];
    int max = 0;
    int pos ;
    for(int i=0; i<n; i++){
        cin>>a[i];
        if(max < a[i]){
            max = a[i];
            pos = i;
        }
    }
    a[pos] = max/2;
    max = 0;
    
   for(int j=1; j<k; j++){
       for(int i=0; i<n; i++){
            if(max < a[i]){
                max = a[i];
                pos = i;
            }
        }
        a[pos] = max/2;
        max = 0;
    }
    int sum = 0;
    cout<<accumulate(a, a+n, sum);
    
    return 0;
}
